<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>

  <targets>
    <target name="file"  xsi:type="File" fileName="${basedir}/${date:format=yyyy\.MM\.dd}.txt" layout="${date}|${level}|${message}" 
            archiveEvery="Day" archiveFileName="logs/${date:format=yyyy\.MM\.dd}.log" archiveDateFormat="yyyyMMdd" maxArchiveFiles="7"/>
  </targets>
  <rules>
    <logger name="*" minlevel="Debug" writeTo="file" />
    <logger name="*" minlevel="Info" writeTo="file"/>
    <logger name="*" minlevel="Error" writeTo="file" />
  </rules>
</nlog>
